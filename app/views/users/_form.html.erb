<%= form_with(model: @user, local: true) do |f| %>
 <%= render "shared/error_messages", object: @user %>
 
 <%= f.label :name, class: "label-#{yield(:class_text)}" %>
 <%= f.text_field :name, class: "form-contral" %>
 
 <%= f.label :email, class: "label-#{yield(:class_text)}" %>
 <%= f.email_field :email, class: "form-contral" %>

 <%= f.label :department, class: "label-#{yield(:class_text)}" %>
 <%= f.text_field :department, class: "form-contral" %>
  
 <%= f.label :password, class: "label-#{yield(:class_text)}" %>
 <%= f.password_field :password, class: "form-contral" %>
 
 <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
 <%= f.password_field :password_confirmation,class: "form-contral" %>
 
 <%= f.submit yield(:button_text), class: "btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>